<div class="row">
    <div class="col-6 offset-3">
        <div class="{{#if noMessages}}d-none{{/if}} alert alert-success ">
            {{successMsg}}
        </div>
    </div>
</div>
<div class="row py-5">
    {{#each products}}
    <div class="col-4 mb-3">
        <div class="card p-4">
            <img src="{{this.imagePath}}" class="card-img-top px-5" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
            </div>
            <div class="d-flex">
                <p><strong>${{this.price}}</strong></p>
                <a class="btn btn-sm btn-success ml-auto" href="/add-to-cart/{{this._id}}">Add To Shopping Cart</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
